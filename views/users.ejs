<!DOCTYPE html>
<html>

<head>
  <title> Admin Page</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link rel="stylesheet" href="../stylesheets/product.css">
  <script src="https://kit.fontawesome.com/91c7e26d12.js" crossorigin="anonymous"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
  <div>
    <%- include('./partials/navbar.ejs') %>
  </div>
  <div class="data-table-container">
    <div class="container mt-3">
       <h2 class="text-center mb-4">Users</h2>
    </div>
   
     <div class="table-responsive" >
       <table class="table table-hover"> 
         <thead>
           <tr>
             <th scope="col">Id</th>
             <th scope="col">FirstName</th>
             <th scope="col">LastName</th>
             <th scope="col">Email</th>
             <th scope="col">Address</th>
             <th scope="col">Number</th>
             <th scope="col">Membership</th>
             <th scope="col">TotalPurchased</th>
             <th scope="col">Deleted</th>
             <th scope="col">Role</th>
             <th scope="col">Options</th>

            </tr>
         </thead>
         <tbody>
           <% users.forEach(function(user) { %>
             <tr>
               <td><%= user.firstName %></td>
               <td><%= user.lastName %></td>
               <td><%= user.userName %></td>
               <td><%= user.email %></td>
               <td><%= user.address %></td>
               <td><%= user.tlfNumber %></td>
               <td><%= user.memberShip %></td>
               <td><%= user.totalPurchased %></td>
               <td><%= user.deleted %></td>
               <td><%= user.role %></td>
              <td>
                 <button class="btn btn-success updateRole" data-id="<%= user.id %>">
                   <i class="fa-regular fa-pen-to-square"></i>Update Role
                 </button>
                <button class="btn btn-danger deleteUser" data-id="<%= user.id %>">
                   <i class="fa-solid fa-trash"></i>Delete
                 </button>
               </td>
             </tr>
           <% }); %>
         </tbody>
       </table>
     </div>  
   </div>
 <script src="../js/adminUser.js"></script>
</body>