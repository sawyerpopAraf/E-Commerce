<!DOCTYPE html>
<html>

<head>
  <title> Admin Page</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link rel="stylesheet" href="../stylesheets/product.css">
  <script src="https://kit.fontawesome.com/91c7e26d12.js" crossorigin="anonymous"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
  <div>
    <%- include('./partials/navbar.ejs') %>
  </div>
  <div class="data-table-container">
    <div class="container mt-3">
       <h2 class="text-center mb-4">Orders</h2>
    </div>
   
     <div class="table-responsive" >
       <table class="table table-hover"> 
         <thead>
           <tr>
             <th scope="col">Id</th>
             <th scope="col">Order Number</th>
             <th scope="col">Created</th>
             <th scope="col">Updated</th>
             <th scope="col">UserId</th>
             <th scope="col">OrderStatus</th>
             <th scope="col">Options</th>
            </tr>
         </thead>
         <tbody>
           <% orders.forEach(function(order) { %>
             <tr>
               <td><%= order.id %></td>
               <td><%= order.orderNumber %></td>
               <td><%= new Date (order.createdAt).toLocaleDateString() %></td>
               <td><%= new Date (order.updatedAt).toLocaleDateString() %></td>
               <td><%= order.UserId %></td>
               <td><%= order.status %></td>
              <td>
                 <button class="btn btn-success updateOrder" data-id="<%= order.id %>">
                   <i class="fa-regular fa-pen-to-square"></i>
                 </button>            
               </td>
             </tr>
           <% }); %>
         </tbody>
       </table>
     </div>  
   </div>
 <script src="../js/adminOrder.js"></script>
 <script src="../js/logout.js"></script>

</body>