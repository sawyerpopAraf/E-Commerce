<!DOCTYPE html>
<html>

<head>
  <title> Admin Page</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link rel="stylesheet" href="../stylesheets/product.css">
  <script src="https://kit.fontawesome.com/91c7e26d12.js" crossorigin="anonymous"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 

 
</head>

<body>
  <div>
    <%- include('./partials/navbar.ejs') %>
  </div>
  <div class="data-table-container">
   <div class="container mt-3">
      <h2 class="text-center mb-4">Products</h2>
      <div class="row">
         <div class="col-lg-4 col-md-4 col-sm-12 text-right">
          <button class="btn btn-success" id="addBrand">
            <i class="fa-sharp fa-solid fa-plus"></i> Add Brand
          </button>
        </div>
      </div>
    </div>
  
    <div class="table-responsive" >
      <table class="table table-hover"> 
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
          <% brands.forEach(function(brand) { %>
            <tr>
              <td><%= brand.id %></td>
              <td><%= brand.name %></td>
              <td><button class="btn btn-success editBrandBtn" data-id="<%= brand.id %>">
                <i class="fa-regular fa-pen-to-square"></i>Edit</button></td>
               <td><button class="btn btn-success editBrandBtn" data-id="<%= brand.id %>">
                <i class="fa-solid fa-trash"></i>Delete</button></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>  
  
  </div>
  
  
  
  

  
  
  
  

  <script src="../js/admin.js"></script>
  <script src="../js/search.js"></script>
  <script src="../js/adminProduct.js"></script>
  

</body>